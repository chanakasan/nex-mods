main() {
  local short_name=$1
  local plugin_dir=nex-$short_name
  local base_dir=$HOME/dotfiles
  local file=$base_dir/$plugin_dir/setup/install.sh
  if [ -z "$short_name" ]; then
    echo
    echo " Usage: nex install_plug git|mux|tools"
    echo
    exit 1
  elif [ -f $file ]; then
    echo " Running setup $file"
    bash $file
  else
    echo " setup not found: $file"
  fi
}

main $@
