main() {
  local input_arg="$1"
  if input_is_a_symlink; then
    vscode $(readlink -f "$input_arg")
  elif input_is_a_dir; then
    vscode $input_arg
  else
    _ed_sp
  fi
}

input_is_a_dir() {
  if [ -d "$input_arg" ]; then
    return 0
  else
    return 1
  fi
}

input_is_a_symlink() {
  if [ -L "$input_arg" ]; then
    return 0
  else
    return 1
  fi
}

main "$1"
